    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.3",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^2.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
